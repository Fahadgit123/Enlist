<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.toshiba.enlistcart.CartlistActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cartlist_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_image"/>
            <TextView
                android:id="@+id/cartproduct_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cartlist_img"
                android:text="Product name"
                android:textStyle="bold"
                android:textSize="22dp"/>
            <TextView
                android:id="@+id/cartproduct_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cartlist_img"
                android:layout_below="@id/cartproduct_name"
                android:text="price"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/cartquantityminus_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cartproduct_price"
                android:layout_toRightOf="@id/cartlist_img"
                android:src="@drawable/ic_remove_minus"/>
            <TextView
                android:id="@+id/cartquantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cartquantityminus_img"
                android:layout_below="@id/cartproduct_price"
                android:layout_marginLeft="15dp"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/cartquantityplus_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cartproduct_price"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/cartquantity_txt"
                android:src="@drawable/ic_add_circle_plus"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_delete"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/totalamount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="5000"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/total_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/totalamount_txt"
                    android:text="Total "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_shopping"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_home"/>
    </RelativeLayout>

</LinearLayout>
